{
  "name": "saga-slice-helpers",
  "version": "0.1.2",
  "description": "Opinionated helpers for working with saga-slice library",
  "scripts": {
    "test": "jest --passWithNoTests --runInBand",
    "tdd": "npm run test -- --watch",
    "lint": "eslint lib",
    "docs": "rm -rf docs; make docs;"
  },
  "homepage": "https://github.com/damusix/saga-slice-helpers#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/damusix/saga-slice-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/damusix/saga-slice-helpers/issues"
  },
  "author": {
    "name": "Danilo Alonso",
    "email": "damusix@gmail.com",
    "url": "https://danilo.io"
  },
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "redux",
    "react",
    "sagas",
    "boilerplate",
    "crud",
    "rest"
  ],
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "axios": "^0.x.x",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-react": "^7.14.3",
    "ghooks": "^2.0.4",
    "immer": "^3.x.x",
    "jest": "^24.8.0",
    "jsdoc-to-markdown": "^5.0.0",
    "redux": "^4.x.x",
    "redux-saga": "^1.x.x",
    "saga-slice": "^0.x.x"
  },
  "peerDependencies": {
    "saga-slice": "^0.x.x"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true,
      "node": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "16.x"
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint; npm run docs; git add ./docs;",
      "pre-push": "npm run test; npm version patch; sleep 1"
    }
  }
}
